
<!-- Background Container -->
<div class="flex flex-wrap items-center justify-center  bg-slate-100">

  <!-- Card Container -->
  <div  class="flex flex-col p-6 m-1 border-s-4 border-indigo-600
  space-y-10 bg-slate-300 rounded-2xl shadow-2xl w-full md:w-1/2 lg:w-1/3 px-4">
    <!-- Content -->
    <div class="flex flex-col space-y-6">
      <!-- Label & Title Container -->
      <div class="flex flex-col mb-4 space-y-3 text-center md:text-left">
      <!-- Title -->
        <div class="max-w-sm text-2xl font-medium">
         Show <%= @product.name.capitalize %>
        </div>

        <!-- Price Container -->
        <% @product.attributes.each do |attr_name, attr_value| %>
          <div class="flex flex-col mb-4 space-y-3 text-center md:text-left">
          <p class="text-lg font-bold">
            <%= attr_name.capitalize %>: <%= attr_value %>
          </p>
          </div>
        <% end %>

        <!-- Button Group -->
        <div class="group">
          <button class="w-full transition-all duration-150 bg-blue-700 text-white border-b-8 border-b-blue-700
            rounded-lg group-hover:border-t-8 group-hover:border-b-0
            group-hover:bg-blue-700 group-hover:border-t-blue-700 group-hover:shadow-lg">
            <div  class="px-8 py-4 duration-150 bg-blue-500 rounded-lg group-hover:bg-blue-700">
              В корзину
            </div>
          </button>
        </div>
        <!-- Bottom Buttons Container -->
        <div class="flex flex-col items-center space-y-4 md:space-y-0 md:space-x-4">
            <button class="flex items-center justify-left py-3 px-2 space-x-3 border-2 border-gray-300
            bg-green-500 rounded-lg shadow-sm hover:bg-opacity-30
            hover:shadow-lg hover:-translate-y-0.5 transition-all duration-150">
            <span>Список бажань</span>
          </button>
        </div>
      </div>
    </div>
  </div> <!-- Card Container -->
</div>

<div>
  <%= link_to "Back", products_path, class:  "text-blue-500 hover:text-blue-700 underline"  %>
</div>
